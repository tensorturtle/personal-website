---
import { type CollectionEntry, getCollection } from "astro:content";
import PageLayout from "@layouts/PageLayout.astro";
import Container from "@components/Container.astro";
import FormattedDate from "@components/FormattedDate.astro";
import { readingTime } from "@lib/utils";
import BackToPrev from "@components/BackToPrev.astro";
import Link from "@components/Link.astro";

export async function getStaticPaths() {
  const work_projects = (await getCollection("work_projects"))
    .filter(post => !post.data.draft)
    .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
  return work_projects.map((work_project) => ({
    params: { slug: work_project.slug },
    props: work_project,
  }));
}
type Props = CollectionEntry<"work_projects">;

const work_project = Astro.props;
const { Content } = await work_project.render();
---

<PageLayout title={work_project.data.title} description={work_project.data.description}>
  <Container>
    <div class="animate">
      <BackToPrev href="/work_projects">
        Back to work projects
      </BackToPrev>
    </div>
    <div class="space-y-1 my-10">
      <div class="animate flex items-center gap-1.5">
        <div class="font-base text-sm">
          <FormattedDate date={work_project.data.date} />
        </div>
        &bull;
        <div class="font-base text-sm">
          {readingTime(work_project.body)}
        </div>
      </div>
      <div class="animate text-2xl font-semibold text-black dark:text-white">
        {work_project.data.title}
      </div>
      {(work_project.data.demoURL || work_project.data.repoURL) && (
        <nav class="animate flex gap-1">
          {work_project.data.demoURL && (
            <Link href={work_project.data.demoURL} external>
              demo
            </Link>
          )}
          {work_project.data.demoURL && work_project.data.repoURL && (
            <span>/</span>
          )}
          {work_project.data.repoURL && (
            <Link href={work_project.data.repoURL} external>
              repo
            </Link>
          )}
        </nav>
      )}
    </div>
    <article class="animate">
      <Content />
    </article>
  </Container>
</PageLayout>